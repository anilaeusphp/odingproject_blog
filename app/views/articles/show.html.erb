<h1>Welcome to page for <%= @article.title %></h1>
<p><%= @article.body %></p>
<%= button_to "Destroy Article", article_path(@article), method: :delete, data: { turbo_confirm: "Are you certain to delete?" } %>

<h4>Add a Comment</h4>
<%= form_with(model: [@article, @article.comments.build]) do |form| %>
  <div>
    <%= form.label :commenter %>
    <%= form.text_field :commenter %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <%= form.submit %>
<% end %>

<% if @article.comments.size >= 1 %>
  <% @article.comments.each do |comment| %>
    <div>
      Commenter : <%= comment.commenter %>
    </div>
    <div>
      Comment Body : <%= comment.body %>
    </div>
  <% end %>
<% end %>