<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <% article.errors.each do |error| %>
      <p><%= error.full_message %></p>
  <% end %>
    <% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <%= form.submit %>
<% end %>